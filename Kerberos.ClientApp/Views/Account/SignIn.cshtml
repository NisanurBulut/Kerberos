@model AppUserLoginDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" class="w-75 mx-auto p-3 mt-4">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <span asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-sm btn-primary">Giriş Yap</button>
    <a class="btn btn-sm btn-warning" asp-action="SignUp" asp-controller="Account">Kayıt Ol</a>
    <div asp-validation-summary="ModelOnly" class="text-center">
    </div>
</form>

